#include <iostream>
#include <string>
using namespace std;
struct ogretmen {
	string name;
	string age;
	string department;
};

int main() {
	ogretmen a;
	int n;
	cout << "ogretmen sayisini giriniz: ";
	cin >> n;
	string* name = new string[n];
	string* age= new string[n];
	string* department = new string[n];
	for (int i = 0; i < n; i++) {
		cout << "adi giriniz: ";
		cin >> a.name;
		name[i] = a.name;
		cout << "yasi giriniz: ";
		cin >> a.age;
		age[i] = a.age;
		cout << "department giriniz: ";
		cin >> a.department;
		department[i] = a.department;
	}
	for (int i = 0; i < n; i++) {
		cout << name[i] << " " << age[i] << " " << department[i] << endl;
	}

	return 0;
}
