#include <iostream>
#include <string>
using namespace std;
struct ogrenci {
	char isim[20];
	char soyisim[20];
	int no;
};
int main() {
	ogrenci ogrenciler[3];
	int i;
	for (i = 0; i < 3; i++) {
		cout << i+1 << ". ogrencinin bilgilerini girin:";
		cin >> ogrenciler[i].isim;
		cin >> ogrenciler[i].soyisim;
		cin >> ogrenciler[i].no;
	}
	for (i = 0; i < 3; i++) {
		cout << i + 1 << ". ogrencinin bilgileri: " <<ogrenciler[i].isim<<" "<< ogrenciler[i].soyisim<<" "<< ogrenciler[i].no;
		cout << endl;
	}



	return 0;
}
